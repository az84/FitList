<script src="./js/exercise.js" defer></script>

<div class="Container">
  <h2>Add An Exercise!</h2>
  <div class="exercisename">
    <label for="exercise_name">exercise name</label>
    <input type="text" name="exercise_name" id="exercise_name" placeholder="exercise_name" />
  </div>

    <div class="muscle">
      <label for="type">Muscle:</label>
      <input type="text" name="muscle" id="muscle" placeholder="" />
    </div>

    <div class="excercise">
    <label for="excercise">Excercise:</label>
    <input type="text" name="excercise" id="excercise" placeholder="excercise" />

    <div class="sets">
      <label for="sets">Sets:</label>
      <input type="number" name="sets" id="sets" placeholder="4" />
    </div>

    <div class="reps">
      <label for="reps">Reps:</label>
      <input type="number" name="reps" id="reps" placeholder="10" />
    </div>

    <div class="weight">
      <label for="weight">Weight (lbs):</label>
      <input type="number" name="weight" id="weight" placeholder="10" />
    </div>

    <div class="distance">
      <label for="reps">Distance(mi):</label>
      <input type="number" name="distance" id="distance" placeholder="10" />
    </div>

  </div>
  <button type="submit" id="newexercisebtn" class="btn">Create exercise card</button>
</div>
<div class="Container">
     {{log 'this' this}}
   {{#each exercise as |exercise| }}
     {{> exercise-info}}
   {{/each}}
</div>


