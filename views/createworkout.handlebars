<div class="Container">
  <h2>Create a Workout</h2>
  <div class="workout_name">
    <label for="workout_name">Workout name</label>
    <input type="text" name="workout_name" id="workout_name" placeholder="workout_name" />
  </div>

  <label for="date">Date:</label>
  <input type="datetime-local" id="date"
       name="date" value="2021-09-16">
     {{!--   min="2021-06-07T00:00" max="2021-06-14T00:00"> --}}
     <form class="form exerciseForm" name="exerciseForm" id="exerciseForm">

    <div class="category">
      <label for="category">Category:</label>
      <input type="text" name="category" id="category"/>
    </div>

    <div class="equipment">
      <label for="equipment">Equipment:</label>
      <input type="text" name="equipment" id="equipment" placeholder="equipment" />
    </div>

    <div class="type">
      <label for="type">Type:</label>
      <input type="text" name="type" id="type" placeholder="type" />
    </div>

    <div class="muscle">
      <label for="type">Muscle:</label>
      <input type="text" name="muscle" id="muscle" placeholder="muscle" />
    </div>

    <div class="excercise">
    <label for="excercise">Excercise:</label>
    <input type="text" name="excercise" id="excercise"/>

    <div class="sets">
      <label for="sets">Sets:</label>
      <input type="number" name="sets" id="sets" placeholder="4" value="0" />
    </div>

    <div class="reps">
      <label for="reps">Reps:</label>
      <input type="number" name="reps" id="reps" value="0" placeholder="10" />
    </div>

    <div class="weight">
      <label for="weight">Weight (lbs):</label>
      <input type="number" name="weight" id="weight" value="0" placeholder="10" />
    </div>

    <div class="distance">
      <label for="reps">Distance(mi):</label>
      <input type="number" name="distance" id="distance" value="0" placeholder="10" />
    </div>

    <div class="duration">
      <label for="duration">duration:</label>
      <input type="number" name="duration" id="duration" value="0" placeholder="10" />
    </div>


  </div>
  <button type="reset" id="AddExercise" value="Reset">Add Exercise</button>
  <button type="submit" id="newWorkoutbtn" class="btn">Create new workout</button>
</div>
  </form>
  </div>
